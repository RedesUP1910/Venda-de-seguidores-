  <script>
    document.getElementById("pedidoForm").addEventListener("submit", function(e) {
      e.preventDefault();
      const inputs = e.target.elements;
      const nome = inputs[0].value;
      const perfil = inputs[1].value;
      const plataforma = inputs[2].value;
      const pedido = inputs[3].value;
      const mensagem = `Olá, meu nome é ${nome}. Quero comprar:
Plataforma: ${plataforma}
Perfil: ${perfil}
Pedido: ${pedido}`;
      const numero = "SEUNUMERO"; // Substitua pelo número com DDI, ex: 5591999999999
      window.open(`https://wa.me/${numero}?text=${encodeURIComponent(mensagem)}`);
    });
  </script>
